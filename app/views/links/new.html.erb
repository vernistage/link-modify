<h1>Add Your Link</h1>

<%= form_for :link, url: links_path do |f| %>
	<% if @link.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@link.errors.count, "error") %>
				prohibited this article from being saved:
			</h2>
			<ul>
				<% @link.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :entry %><br>
		<%= f.text_field :entry %>
	</p>

	<p>
		<%= f.label :destination %><br>
		<%= f.text_area :destination %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

<%= link_to 'Back', links_path %>
